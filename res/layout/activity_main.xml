<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg0"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/adLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adLayout"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            style="@style/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="35dip"
            android:text="卡通拼图" />

        <Button
            android:id="@+id/game"
            style="@style/text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/btn_menu_item1_bg"
            android:text="新游戏" />

        <Button
            android:id="@+id/continue_button"
            style="@style/text"
            android:layout_width="fill_parent"
             android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/btn_menu_item2_bg"
            android:text="继续游戏" />

        <Button
            android:id="@+id/choose"
            style="@style/text"
            android:layout_width="fill_parent"
             android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/btn_menu_item3_bg"
            android:text="选择照片" />

        <Button
            android:id="@+id/instructions"
            style="@style/text"
            android:layout_width="fill_parent"
             android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/btn_menu_item2_bg"
            android:text="关于/帮助" />

        <Button
            android:id="@+id/settngs"
            style="@style/text"
            android:layout_width="fill_parent"
             android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/btn_menu_item3_bg"
            android:text="设置" />

        <Button
            android:id="@+id/more"
            style="@style/text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/btn_menu_item2_bg"
            android:text="更多游戏" />

        <Button
            android:id="@+id/exit_button"
            style="@style/text"
            android:layout_width="fill_parent"
             android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/btn_menu_item3_bg"
            android:text="退出" />
    </LinearLayout>

</RelativeLayout>