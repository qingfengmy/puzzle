<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg0"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/adLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >
        </LinearLayout>

        <TextView
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:background="@drawable/bg_top"
            android:padding="3dp"
            android:shadowColor="#4d4d4d"
            android:shadowDx="0"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="帮助"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:padding="3dp"
            android:text="@string/instructions"
            android:textColor="#010101"
            android:textSize="20.0sp" />

        <TextView
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:background="@drawable/bg_top"
            android:padding="3dp"
            android:shadowColor="#4d4d4d"
            android:shadowDx="0"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="设置"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:padding="3dp"
            android:text="@string/gametype"
            android:textColor="#010101"
            android:textSize="20.0sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:padding="3dp"
            android:text="@string/background"
            android:textColor="#010101"
            android:textSize="20.0sp" />

        <TextView
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:background="@drawable/bg_top"
            android:padding="3dp"
            android:shadowColor="#4d4d4d"
            android:shadowDx="0"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="关于"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:padding="3dp"
            android:text="清风明月（qingfengmy@126.com）"
            android:textColor="#010101"
            android:textSize="20.0sp" />
        <TextView
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:background="@drawable/bg_top"
            android:padding="3dp"
            android:shadowColor="#4d4d4d"
            android:shadowDx="0"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="github"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/github"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:padding="3dp"
            android:textColor="#010101"
            android:textSize="20.0sp" />
    </LinearLayout>

</ScrollView>