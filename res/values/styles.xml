<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="text">
        <item name="android:shadowDx">10.0</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="title">
        <item name="android:shadowDx">15.0</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">2.5</item>
        <item name="android:textColor">#5a2a4a</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="perference_set_activity">
        <item name="android:windowBackground">@drawable/bg0</item>
 <!-- 窗口背景 -->
        <item name="android:focusable">false</item>
        <item name="android:textColor">#ff202020</item>
 <!-- 字体颜色 -->
        <item name="android:colorBackgroundCacheHint">#00000000</item>
 <!-- 背景缓存色透明，避免拖动全黑 -->
        <item name="android:windowNoTitle">true</item>
 <!-- 是否有标题 -->
    </style>

</resources>